# CloakNet VPN Environment Variables
# Copy this file to .env and fill in your values

# Database (SQLite for development)
DATABASE_URL="file:./dev.db"

# NextAuth.js Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"
# For production behind a reverse proxy, you may also set:
# AUTH_TRUST_HOST=true

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_test_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_test_key_here"

# Stripe Webhook Secret
# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Stripe Price IDs
# Create products and prices in Stripe Dashboard
# Weekly subscription price ID
STRIPE_WEEKLY_PRICE_ID="price_weekly_placeholder"
# Monthly subscription price ID
STRIPE_MONTHLY_PRICE_ID="price_monthly_placeholder"

# VPN Server Configuration
# These are used by the provisioning service to generate client configurations
VPN_SERVER_HOST="vpn.cloaknet.de"
VPN_SERVER_PORT="51820"
VPN_PROTOCOL="wireguard"

# WireGuard Server Public Key
# Generated by server/vpn/setup.sh - found in /etc/wireguard/keys/server_public.key
WG_SERVER_PUBLIC_KEY="your_server_public_key_here"
